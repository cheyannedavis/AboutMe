<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             BackgroundImageSource="PinkGrey.PNG"
             x:Class="CDavisAboutMe.MainPage">

    <StackLayout
        Margin="20">
       
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Label
                Text="Cheyanne Davis"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                FontSize="Medium"
                TextColor="White"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2">

            </Label>

            <Button 
                BackgroundColor="Black"
                CornerRadius="50"
                HeightRequest="50"
                Text="About Me"
                HorizontalOptions="Center"
                FontSize="Small"
                TextColor="White"
                Grid.Row="1"
                Grid.Column="0"
                WidthRequest="120"
                Clicked="AboutMeButton_Clicked">
                
            </Button>

            <Button
                BackgroundColor="Black"
                CornerRadius="50"
                HeightRequest="50"
                WidthRequest="100"
                Text="Skills"
                HorizontalOptions="Center"
                FontSize="Small"
                TextColor="White"
                Grid.Row="2"
                Grid.Column="1"
                Clicked="SkillsButton_Clicked">
            </Button>

            <Button
                BackgroundColor="Black"
                CornerRadius="50"
                HeightRequest="50"
                WidthRequest="100"
                Text="Contact"
                HorizontalOptions="Center"
                VerticalOptions="Start"
                FontSize="Small"
                TextColor="White"
                Grid.Row="3"
                Grid.Column="0"
                Clicked="ContactButton_Clicked">
            </Button>
        </Grid>
    </StackLayout>

</ContentPage>

    